{
	"name": "obsidiancontrol-onyx-osc",
	"version": "0.1.0",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"format": "prettier -w .",
		"prepare": "husky install",
		"dev": "yarn build:main --watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg",
		"lint": "yarn lint:raw .",
		"dist": "yarn companion-module-build"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-obsidiancontrol-onyx-osc.git"
	},
	"dependencies": {
		"@companion-module/base": "~1.0.1",
		"osc": "^2.4.3"
	},
	"devDependencies": {
		"@companion-module/tools": "^0.5.1",
		"@types/node": "^18.11.9",
		"husky": "^8.0.2",
		"lint-staged": "^13.0.3",
		"ts-node": "^10.9.1",
		"typescript": "~4.9"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	}
}